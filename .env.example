# Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_client_id_here
GITHUB_CLIENT_SECRET=your_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:4321/oss-wishlist-website/auth/callback

# Security
OAUTH_STATE_SECRET=your_random_secret_here_for_state_validation

# API Keys and Tokens
GITHUB_TOKEN=your_github_token_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Database
DATABASE_URL=your_database_url_here

# Email Service (e.g., SendGrid, Mailgun)
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM=noreply@oss-wishlist.com

# Authentication
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_oauth_client_id_here
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:4321/auth/github/callback

# External APIs
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Environment
NODE_ENV=development
PUBLIC_SITE_URL=http://localhost:4321