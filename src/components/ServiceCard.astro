---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
export interface Props {
  title: string;
  description: string;
  price_tier: 'low' | 'medium' | 'high' | 'enterprise';
  estimated_hours: string;
  slug: string;
  tags: string[];
  type: 'service' | 'resource';
  available?: boolean;
  unavailable_reason?: string;
}

const { title, description, price_tier, estimated_hours, slug, tags, type, available = true, unavailable_reason } = Astro.props;

const priceTiers = {
  low: { label: 'Budget', color: 'bg-gray-100 text-gray-800' },
  medium: { label: 'Standard', color: 'bg-gray-200 text-gray-900' },
  high: { label: 'Premium', color: 'bg-slate-100 text-slate-800' },
  enterprise: { label: 'Enterprise', color: 'bg-gray-300 text-gray-900' }
};
---

<div class={`service-card bg-white p-6 rounded-lg shadow-sm border transition-shadow ${!available ? 'opacity-60 grayscale' : 'hover:shadow-md'}`}>
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class={`text-lg font-semibold mb-2 ${!available ? 'text-gray-500' : 'text-gray-900'}`}>{title}</h3>
      {!available && (
        <div class="mb-2">
          <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-gray-200 text-gray-700 rounded-full">
            Currently Unavailable
          </span>
        </div>
      )}
      <p class={`text-sm mb-3 ${!available ? 'text-gray-400' : 'text-gray-600'}`}>{description}</p>
      {!available && unavailable_reason && (
        <p class="text-xs text-gray-500 italic mb-3">{unavailable_reason}</p>
      )}
    </div>
  </div>
  
  <div class="mb-4">
    <div class="flex justify-between items-center mb-3">
      <span class={`text-sm ${!available ? 'text-gray-400' : 'text-gray-500'}`}>Est. {estimated_hours}</span>
    </div>
    <div class="flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class={`px-2 py-1 text-xs rounded ${!available ? 'bg-gray-50 text-gray-400' : 'bg-gray-100 text-gray-600'}`}>
          {tag}
        </span>
      ))}
    </div>
  </div>
  
  {available ? (
    <a 
      href={`${basePath}/services/${slug}`} 
      class="inline-block bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 transition-colors text-sm font-medium"
    >
      Learn More
    </a>
  ) : (
    <span class="text-sm text-gray-400 italic">
      {type === 'resource' ? 'Funding needed' : 'Practitioners needed'}
    </span>
  )}
</div>
