---
export interface Props {
  title: string;
  description: string;
  category: string;
  price_tier: 'low' | 'medium' | 'high';
  estimated_hours: string;
  slug: string;
}

const { title, description, category, price_tier, estimated_hours, slug } = Astro.props;

const priceTiers = {
  low: { label: '$200-400', color: 'bg-green-100 text-green-800' },
  medium: { label: '$500-800', color: 'bg-blue-100 text-blue-800' },
  high: { label: '$1000+', color: 'bg-purple-100 text-purple-800' }
};
---

<div class="service-card bg-white p-6 rounded-lg shadow-sm border hover:shadow-md transition-shadow">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">{title}</h3>
      <p class="text-gray-600 text-sm mb-3">{description}</p>
    </div>
    <span class={`px-3 py-1 rounded-full text-sm font-medium ${priceTiers[price_tier].color}`}>
      {priceTiers[price_tier].label}
    </span>
  </div>
  
  <div class="flex justify-between items-center mb-4">
    <span class="text-sm text-gray-500">Category: {category}</span>
    <span class="text-sm text-gray-500">Est. {estimated_hours}</span>
  </div>
  
  <a 
    href={`/services/${slug}`} 
    class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors text-sm font-medium"
  >
    Learn More
  </a>
</div>
