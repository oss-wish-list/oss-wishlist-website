---
export interface Props {
  title: string;
  description: string;
  price_tier: 'low' | 'medium' | 'high' | 'enterprise';
  estimated_hours: string;
  slug: string;
  tags: string[];
}

const { title, description, price_tier, estimated_hours, slug, tags } = Astro.props;

const priceTiers = {
  low: { label: 'Budget', color: 'bg-gray-100 text-gray-800' },
  medium: { label: 'Standard', color: 'bg-gray-200 text-gray-900' },
  high: { label: 'Premium', color: 'bg-slate-100 text-slate-800' },
  enterprise: { label: 'Enterprise', color: 'bg-gray-300 text-gray-900' }
};
---

<div class="service-card bg-white p-6 rounded-lg shadow-sm border hover:shadow-md transition-shadow">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">{title}</h3>
      <p class="text-gray-600 text-sm mb-3">{description}</p>
    </div>
  </div>
  
  <div class="mb-4">
    <div class="flex justify-between items-center mb-3">
      <span class="text-sm text-gray-500">Est. {estimated_hours}</span>
    </div>
    <div class="flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class="px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded">
          {tag}
        </span>
      ))}
    </div>
  </div>
  
  <a 
    href={`${import.meta.env.BASE_URL}/services/${slug}`} 
    class="inline-block bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 transition-colors text-sm font-medium"
  >
    Learn More
  </a>
</div>
