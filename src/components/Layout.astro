---
import '../styles/global.css';
import { getBasePath } from '../lib/paths';
import Header from './Header.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Get the help your open source project needs" } = Astro.props;
// Use centralized path utility for consistent handling
const basePath = getBasePath(); // Returns with trailing slash
const logoUrl = `${basePath}logo.png`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href={logoUrl} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <!-- Skip to main content link for keyboard users -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-gray-900 focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:shadow-lg">
      Skip to main content
    </a>

    <Header />

    <main id="main-content"  tabindex="-1">
      <slot />
    </main>

    <footer class="bg-gray-900 text-white py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="flex justify-center space-x-6">
            <a 
              href="https://github.com/oss-wishlist" 
              class="text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-gray-900 rounded px-2 py-1 flex items-center min-h-[44px] transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Visit our GitHub repository"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
