---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Get the help your open source project needs" } = Astro.props;
const logoUrl = `${import.meta.env.BASE_URL}/logo.png`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href={logoUrl} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 min-h-screen">
    <header class="bg-white shadow-sm border-b">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center space-x-4">
            <img src={logoUrl} alt="Open Source Wishlist" class="h-8 w-8" />
            <a href={import.meta.env.BASE_URL} class="text-xl font-bold text-gray-900">Open Source Wishlist</a>
          </div>
          <div class="flex space-x-6 items-center">
            <a href={`${import.meta.env.BASE_URL}/wishlists`} class="text-gray-700 hover:text-gray-900">Browse Wishlists</a>
            <a href={`${import.meta.env.BASE_URL}/catalog`} class="text-gray-700 hover:text-gray-900">Service Catalog</a>
            <a href={`${import.meta.env.BASE_URL}/practitioners`} class="text-gray-700 hover:text-gray-900">Our Practitioners</a>
            <a href={`${import.meta.env.BASE_URL}/ecosystem-guardians`} class="text-gray-700 hover:text-gray-900">Ecosystem Guardians</a>
            
            <!-- About Dropdown -->
            <div class="relative" id="about-dropdown">
              <button 
                class="text-gray-700 hover:text-gray-900 flex items-center space-x-1"
                aria-expanded="false"
                aria-haspopup="true"
                id="about-dropdown-button"
              >
                <span>About</span>
                <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              
              <!-- Dropdown Menu -->
              <div 
                id="about-menu"
                class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none hidden z-50"
                role="menu"
                aria-orientation="vertical"
              >
                <div class="py-1" role="none">
                  <a href={`${import.meta.env.BASE_URL}/faq`} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">FAQ</a>
                </div>
              </div>
            </div>
            
            <a href={`${import.meta.env.BASE_URL}/maintainers`} class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700">
              Create Wishlist
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-900 text-white py-12 mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p class="text-gray-400">
            Open source maintainers need help. Open Source Wishlist connects maintainers with services and resources that make all the difference.
          </p>
          <div class="mt-4 flex justify-center space-x-6">
            <a href="https://github.com/oss-wishlist" class="text-gray-400 hover:text-white flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
              </svg>
              GitHub
            </a>
            <a href="https://join.slack.com/t/opensourcewishlist/shared_invite/zt-3dvyh48xf-y6uqKHyd6Ur~WfkcawReuQ" class="text-gray-400 hover:text-white flex items-center" target="_blank" rel="noopener noreferrer">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313zM8.834 5.042a2.528 2.528 0 0 1-2.521-2.52A2.528 2.528 0 0 1 8.834 0a2.528 2.528 0 0 1 2.521 2.522v2.52H8.834zM8.834 6.313a2.528 2.528 0 0 1 2.521 2.521 2.528 2.528 0 0 1-2.521 2.521H2.522A2.528 2.528 0 0 1 0 8.834a2.528 2.528 0 0 1 2.522-2.521h6.312zM18.956 8.834a2.528 2.528 0 0 1 2.522-2.521A2.528 2.528 0 0 1 24 8.834a2.528 2.528 0 0 1-2.522 2.521h-2.522V8.834zM17.688 8.834a2.528 2.528 0 0 1-2.523 2.521 2.527 2.527 0 0 1-2.52-2.521V2.522A2.527 2.527 0 0 1 15.165 0a2.528 2.528 0 0 1 2.523 2.522v6.312zM15.165 18.956a2.528 2.528 0 0 1 2.523 2.522A2.528 2.528 0 0 1 15.165 24a2.527 2.527 0 0 1-2.52-2.522v-2.522h2.52zM15.165 17.688a2.527 2.527 0 0 1-2.52-2.523 2.526 2.526 0 0 1 2.52-2.52h6.313A2.527 2.527 0 0 1 24 15.165a2.528 2.528 0 0 1-2.522 2.523h-6.313z"/>
              </svg>
              Slack
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: system-ui, sans-serif;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const dropdownButton = document.getElementById('about-dropdown-button');
    const menu = document.getElementById('about-menu');
    const dropdown = document.getElementById('about-dropdown');
    
    if (!dropdownButton || !menu || !dropdown) return;
    
    function toggleAboutDropdown() {
      const icon = dropdownButton.querySelector('svg');
      
      if (menu.classList.contains('hidden')) {
        // Show menu
        menu.classList.remove('hidden');
        dropdownButton.setAttribute('aria-expanded', 'true');
        if (icon) icon.style.transform = 'rotate(180deg)';
      } else {
        // Hide menu
        menu.classList.add('hidden');
        dropdownButton.setAttribute('aria-expanded', 'false');
        if (icon) icon.style.transform = 'rotate(0deg)';
      }
    }
    
    function hideDropdown() {
      const icon = dropdownButton.querySelector('svg');
      menu.classList.add('hidden');
      dropdownButton.setAttribute('aria-expanded', 'false');
      if (icon) icon.style.transform = 'rotate(0deg)';
    }

    // Add click event to button
    dropdownButton.addEventListener('click', function(e) {
      e.preventDefault();
      toggleAboutDropdown();
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', function(event) {
      if (!dropdown.contains(event.target)) {
        hideDropdown();
      }
    });

    // Close dropdown when pressing Escape
    document.addEventListener('keydown', function(event) {
      if (event.key === 'Escape') {
        hideDropdown();
      }
    });
  });
</script>