---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
import Layout from '../components/Layout.astro';
import { getEntry } from 'astro:content';

const page = await getEntry('pages', 'how-it-works');
const { Content } = await page.render();
---

<Layout title="How OSS Wishlist Works - Open Source Sustainability Platform">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-100 to-gray-200 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{page.data.title}</h1>
      <p class="text-xl text-gray-600">
        {page.data.description}
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-h2:text-3xl prose-h2:font-bold prose-h2:mb-6 prose-h2:mt-12 prose-h3:text-xl prose-h3:font-semibold prose-h3:mb-3 prose-p:text-gray-600 prose-ul:text-gray-600 prose-strong:text-gray-900">
        <Content />
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Ready to Get Started?</h2>
      <p class="text-xl text-gray-600 mb-8">
        Whether you maintain a project, want to support the ecosystem, or offer your expertise
      </p>
      
      <div class="grid md:grid-cols-3 gap-4">
        <a href={`${basePath}/maintainers`} class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-colors block text-center min-h-[44px] flex items-center justify-center">
          Create a Wishlist
        </a>
        <a href={`${basePath}/wishlists`} class="bg-slate-600 text-white px-6 py-3 rounded-lg hover:bg-slate-700 transition-colors block text-center min-h-[44px] flex items-center justify-center">
          Fulfill a Wish
        </a>
        <a href={`${basePath}/apply-practitioner`} class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-colors block text-center min-h-[44px] flex items-center justify-center">
          Become a Practitioner
        </a>
      </div>
    </div>
  </section>
</Layout>
