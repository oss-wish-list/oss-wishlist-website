---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';

const allPractitioners = await getCollection('practitioners');

// Get wishlist context from URL parameters
const url = new URL(Astro.request.url);
const wishlistSlug = url.searchParams.get('wishlist');
const projectName = url.searchParams.get('project');

let selectedWishlist = null;
if (wishlistSlug) {
  const wishlists = await getCollection('wishlists');
  selectedWishlist = wishlists.find(w => w.slug === wishlistSlug);
}
---

<Layout title="Open Source Practitioners" description="Connect with verified open source practitioners who can help with your project needs">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      {selectedWishlist ? (
        <>
          <h1 class="text-5xl font-bold text-gray-900 mb-6">
            Practitioners for <span class="text-emerald-600">{projectName || selectedWishlist.data.project_name}</span>
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Choose a practitioner to hire for the "{projectName || selectedWishlist.data.project_name}" project. 
            Connect directly via GitHub Sponsors or email to get started.
          </p>
        </>
      ) : (
        <>
          <h1 class="text-5xl font-bold text-gray-900 mb-6">Open Source <span class="text-emerald-600">Practitioners</span></h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
           Open source practitioners are experienced subject matter experts in sustainability-critical areas. Through the 'Wishlist fulfillment' process, practitioners connect with maintainers and project communities to deliver outcomes defined by service requirements. Services are offered pro-bono or at predetermined flat rates. Learn more in our <a href={`${basePath}faq`}>FAQ</a>.
          </p>
          
          <!-- Apply to be a Practitioner CTA -->
          <div class="bg-gradient-to-r from-gray-100 to-gray-150 rounded-lg p-6 max-w-4xl mx-auto mb-8 border border-gray-300">
            <div class="text-center">
              <h2 class="text-2xl font-bold text-gray-900 mb-2">Are You an Open Source <span class="text-emerald-600">Practitioner</span>?</h2>
              <p class="text-gray-700 mb-4">
                Join our community of verified practitioners to help open source projects thrive. Questions? Please consult our FAQ.
              </p>
              <p class="text-sm text-gray-600 mb-4 italic">
                Note: We only have room for 10 practitioners in this first launch, but will keep a waitlist for the next phase.
              </p>
              <a 
                href="/oss-wishlist-website/apply-practitioner" 
                class="bg-gray-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors inline-flex items-center"
              >
                Join as an Open Source Practitioner
              </a>
            </div>
          </div>
        </>
      )}
    </div>

    <!-- All Practitioners by Category -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">
        {selectedWishlist ? 'üë• All Available Practitioners' : 'üë• All Practitioners'}
      </h2>
      
      <!-- Category Filter -->
      <div class="flex flex-wrap gap-2 mb-8">
        <button class="px-4 py-2 bg-gray-700 text-white rounded-lg text-sm font-medium">
          All Practitioners
        </button>
      </div>

      <!-- Practitioners Grid -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {allPractitioners.map((practitioner) => (
          <div key={practitioner.slug} class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-start space-x-4 mb-4">
              {practitioner.data.avatar_url && (
                <img 
                  src={practitioner.data.avatar_url} 
                  alt={practitioner.data.name}
                  class="w-12 h-12 rounded-full object-cover"
                />
              )}
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900">{practitioner.data.name}</h3>
                <p class="text-sm text-gray-600">{practitioner.data.title}</p>
                {practitioner.data.company && (
                  <p class="text-xs text-gray-600">{practitioner.data.company}</p>
                )}
              </div>
            </div>
            
            <p class="text-sm text-gray-700 mb-3 line-clamp-2">{practitioner.data.bio}</p>
            

            
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                {practitioner.data.verified && (
                  <span class="text-green-600 text-xs">‚úÖ Verified</span>
                )}
                {practitioner.data.accepts_pro_bono && (
                  <span class="text-gray-600 text-xs">üíù Pro Bono</span>
                )}
              </div>
              <div class="flex space-x-2">
                <a 
                  href={`/oss-wishlist-website/practitioners/${practitioner.slug}`}
                  class="text-gray-600 hover:text-gray-700 text-sm font-medium"
                >
                  View ‚Üí
                </a>
                {selectedWishlist && (
                  <a 
                    href={practitioner.data.github ? `https://github.com/sponsors/${practitioner.data.github}` : `mailto:${practitioner.data.email}?subject=${encodeURIComponent(`Hire ${practitioner.data.name} for ${projectName || selectedWishlist.data.project_name}`)}`}
                    target={practitioner.data.github ? "_blank" : "_self"}
                    rel={practitioner.data.github ? "noopener noreferrer" : ""}
                    class="bg-green-600 text-white px-3 py-1 rounded text-xs font-medium hover:bg-green-700 transition-colors"
                    title={`Hire ${practitioner.data.name} for ${projectName || selectedWishlist.data.project_name}`}
                  >
                    üíº Hire
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-gray-100 rounded-lg p-8 text-center">
      {selectedWishlist ? (
        <>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Ready to Hire an Practitioner?</h2>
          <p class="text-gray-600 mb-6">
            Connect "{projectName || selectedWishlist.data.project_name}" with the expertise they need to succeed.
          </p>
          <div class="flex justify-center space-x-4">
            <a 
              href={selectedWishlist.data.repo_url}
              target="_blank"
              rel="noopener noreferrer"
              class="border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
            >
              View Project
            </a>
            <a 
              href={`${basePath}/wishlists`}
              class="bg-gray-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-800"
            >
              Browse More Projects
            </a>
          </div>
        </>
      ) : null}
    </div>
  </div>
</Layout>