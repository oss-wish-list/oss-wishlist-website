---
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const practitioners = await getCollection('practitioners');
  return practitioners.map((practitioner) => ({
    params: { slug: practitioner.slug },
    props: { practitioner },
  }));
}

const { practitioner } = Astro.props;
const { Content } = await practitioner.render();
---

<Layout title={`${practitioner.data.name} - OSS Practitioner`} description={practitioner.data.bio}>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Back Link -->
    <div class="mb-8">
      <a href="/oss-wishlist-website/practitioners" class="text-gray-600 hover:text-blue-800 text-sm font-medium">
        â† Back to Practitioners
      </a>
    </div>

    <!-- Practitioner Header -->
    <div class="bg-white rounded-lg shadow-sm border p-8 mb-8">
      <div class="flex flex-col md:flex-row md:items-start space-y-6 md:space-y-0 md:space-x-8">
        {practitioner.data.avatar_url && (
          <img 
            src={practitioner.data.avatar_url} 
            alt={practitioner.data.name}
            class="w-32 h-32 rounded-full object-cover mx-auto md:mx-0"
          />
        )}
        
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">{practitioner.data.name}</h1>
          <p class="text-xl text-gray-600 mb-2">{practitioner.data.title}</p>
          {practitioner.data.company && (
            <p class="text-lg text-gray-600 mb-4">{practitioner.data.company}</p>
          )}
          
          <div class="flex flex-wrap justify-center md:justify-start gap-4 text-sm text-gray-600 mb-4">
            {practitioner.data.location && (
              <span class="flex items-center">ğŸ“ {practitioner.data.location}</span>
            )}
            {practitioner.data.years_experience && (
              <span class="flex items-center">â±ï¸ {practitioner.data.years_experience} years experience</span>
            )}
            {practitioner.data.languages && practitioner.data.languages.length > 0 && (
              <span class="flex items-center">ğŸŒ {practitioner.data.languages.join(', ')}</span>
            )}
          </div>
          
          <div class="flex flex-wrap justify-center md:justify-start gap-2">
            {practitioner.data.verified && (
              <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">
                âœ… Verified Practitioner
              </span>
            )}
            {practitioner.data.accepts_pro_bono && (
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                ğŸ’ Pro Bono Available
              </span>
            )}
            {practitioner.data.availability === 'available' && (
              <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">
                ğŸŸ¢ Available
              </span>
            )}
          </div>
        </div>
      </div>
    </div>

    <div class="grid gap-8 lg:grid-cols-3">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Bio -->
        <div class="bg-white rounded-lg shadow-sm border p-6 mb-8">
          <h2 class="text-xl font-bold text-gray-900 mb-4">About</h2>
          <p class="text-gray-700 leading-relaxed">{practitioner.data.bio}</p>
        </div>

        <!-- Full Content -->
        <div class="bg-white rounded-lg shadow-sm border p-6 mb-8">
          <div class="prose max-w-none">
            <Content />
          </div>
        </div>

        <!-- Specialties -->
        <div class="bg-white rounded-lg shadow-sm border p-6 mb-8">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Specialties</h2>
          <div class="flex flex-wrap gap-2">
            {practitioner.data.specialties.map((specialty: string) => (
              <span key={specialty} class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                {specialty}
              </span>
            ))}
          </div>
        </div>



        <!-- Notable Projects -->
        {practitioner.data.notable_projects && practitioner.data.notable_projects.length > 0 && (
          <div class="bg-white rounded-lg shadow-sm border p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Notable Projects</h2>
            <ul class="space-y-2">
              {practitioner.data.notable_projects.map((project: string) => (
                <li key={project} class="text-gray-700">â€¢ {project}</li>
              ))}
            </ul>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Contact -->
        <div class="bg-white rounded-lg shadow-sm border p-6 mb-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Contact</h3>
          <div class="space-y-3">
            {practitioner.data.email && (
              <a href={`mailto:${practitioner.data.email}`} class="flex items-center text-gray-700 hover:text-gray-600">
                ğŸ“§ Email
              </a>
            )}
            {practitioner.data.website && (
              <a href={practitioner.data.website} target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-700 hover:text-gray-600">
                ğŸŒ Website
              </a>
            )}
            {practitioner.data.github && (
              <a href={`https://github.com/${practitioner.data.github}`} target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-700 hover:text-gray-600">
                ğŸ™ GitHub
              </a>
            )}
            {practitioner.data.linkedin && (
              <a href={`https://linkedin.com/in/${practitioner.data.linkedin}`} target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-700 hover:text-gray-600">
                ğŸ’¼ LinkedIn
              </a>
            )}
            {practitioner.data.twitter && (
              <a href={`https://twitter.com/${practitioner.data.twitter}`} target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-700 hover:text-gray-600">
                ğŸ¦ Twitter
              </a>
            )}
          </div>
        </div>

        <!-- Service Categories -->
        <div class="bg-white rounded-lg shadow-sm border p-6 mb-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Service Areas</h3>
          <div class="space-y-2">
            {practitioner.data.service_categories.map((category: string) => (
              <span key={category} class="block bg-gray-100 text-gray-800 px-3 py-2 rounded text-sm">
                {category}
              </span>
            ))}
          </div>
        </div>

        <!-- Pricing -->
        {practitioner.data.hourly_rate_range && (
          <div class="bg-white rounded-lg shadow-sm border p-6 mb-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Pricing</h3>
            <div class="space-y-2 text-sm text-gray-700">
              <p>Hourly Rate: <span class="font-medium">{practitioner.data.hourly_rate_range.replace('-', ' - $').replace('under', 'Under $').replace('plus', '+')}</span></p>
              {practitioner.data.accepts_pro_bono && (
                <p class="text-gray-600">ğŸ’ Pro bono work available</p>
              )}
            </div>
          </div>
        )}

        <!-- Certifications -->
        {practitioner.data.certifications && practitioner.data.certifications.length > 0 && (
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Certifications</h3>
            <ul class="space-y-1 text-sm text-gray-700">
              {practitioner.data.certifications.map((cert: string) => (
                <li key={cert}>ğŸ† {cert}</li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </div>

    <!-- CTA -->
    <div class="bg-blue-50 rounded-lg p-6 mt-8 text-center">
      <h3 class="text-lg font-bold text-gray-900 mb-2">Ready to work with {practitioner.data.name.split(' ')[0]}?</h3>
      <p class="text-gray-600 mb-4">Contact them directly or create a wishlist to get matched with practitioners.</p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        {practitioner.data.email && (
          <a 
            href={`mailto:${practitioner.data.email}?subject=OSS Project Collaboration`}
            class="bg-blue-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-blue-700"
          >
            Contact Practitioner
          </a>
        )}
        <a 
          href="/oss-wishlist-website/maintainers"
          class="bg-white text-gray-600 border border-blue-600 px-6 py-2 rounded-lg font-medium hover:bg-blue-50"
        >
          Create Wishlist
        </a>
      </div>
    </div>
  </div>
</Layout>