---
const url = Astro.url;
const request = Astro.request;

console.log('=== URL TEST PAGE ===');
console.log('Astro.url.href:', url.href);
console.log('Astro.url.search:', url.search);
console.log('Astro.request.url:', request.url);
console.log('Astro.url.searchParams entries:', [...url.searchParams.entries()]);
---

<html>
<head>
    <title>URL Test</title>
</head>
<body>
    <h1>URL Parameter Test</h1>
    <div>
        <h2>URL Information:</h2>
        <p><strong>Astro.url.href:</strong> {url.href}</p>
        <p><strong>Astro.url.search:</strong> {url.search}</p>
        <p><strong>Astro.request.url:</strong> {request.url}</p>
        <p><strong>Wishlist param:</strong> {url.searchParams.get('wishlist')}</p>
        <p><strong>Project param:</strong> {url.searchParams.get('project')}</p>
    </div>
    
    <div>
        <h2>Test Links:</h2>
        <p><a href="/oss-wishlist-website/url-test?wishlist=cli-tools-community&project=test">Test with params</a></p>
        <p><a href="/oss-wishlist-website/url-test">Test without params</a></p>
    </div>
</body>
</html>