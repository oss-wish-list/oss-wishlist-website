---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';

const playbooks = await getCollection('playbooks');
const sortedPlaybooks = playbooks.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));
---

<Layout 
  title="Practitioner Playbooks - Open Source Wishlist" 
  description="Comprehensive guides and best practices for delivering open source services with measurable success metrics"
>
  <!-- Hero Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-gray-900 mb-6">
          Practitioner <span class="text-gray-600">Playbooks</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Evidence-based guides for delivering high-impact open source services. Each playbook includes recommended resources, 
          CHAOSS metrics, and success rubrics.
        </p>
        <div class="flex items-center justify-center gap-2 text-sm text-gray-500">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
          </svg>
          <span>Community-maintained documentation</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Playbooks Grid -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {sortedPlaybooks.map((playbook) => (
          <a 
            href={`${basePath}playbooks/${playbook.slug}`}
            class="group bg-white rounded-lg shadow-sm border p-6 hover:shadow-md transition-all hover:border-gray-400"
          >
            <div class="flex items-start justify-between mb-4">
              <div class="bg-gray-100 p-3 rounded-lg">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">Playbook</span>
            </div>
            
            <h3 class="font-bold text-gray-900 text-lg mb-2 group-hover:text-gray-700">
              {playbook.data.title}
            </h3>
            
            <p class="text-sm text-gray-600 mb-4 line-clamp-2">
              {playbook.data.description}
            </p>
            
            <div class="flex items-center text-sm text-gray-500 group-hover:text-gray-700">
              <span>Read playbook</span>
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </a>
        ))}
      </div>

      {sortedPlaybooks.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500">No playbooks available yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- Contributing Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Help Improve Our Playbooks</h2>
      <p class="text-lg text-gray-600 mb-8">
        These playbooks are community-maintained. Share your expertise and help practitioners deliver better outcomes.
      </p>
      <a 
        href="https://github.com/oss-wishlist/wishlist-playbooks"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 bg-gray-900 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span>Contribute on GitHub</span>
      </a>
    </div>
  </section>
</Layout>
