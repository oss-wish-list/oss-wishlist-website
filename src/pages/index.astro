---
import Layout from '../components/Layout.astro';
import PlaceholderPage from '../components/PlaceholderPage.astro';
import { getCollection } from 'astro:content';
import { getBasePath } from '../lib/paths';

// Check if site is in placeholder mode
const basePath = getBasePath();
const siteMode = import.meta.env.PUBLIC_SITE_MODE || 'full';
const isPlaceholder = siteMode === 'placeholder';

const services = await getCollection('services');
const featuredServices = services.filter(service => service.data.featured);
const maintainerServices = services.filter(service => 
  service.data.target_audience === 'maintainer' || service.data.target_audience === 'both'
);
const companyServices = services.filter(service => 
  service.data.target_audience === 'company' || service.data.target_audience === 'both'
);
---

{isPlaceholder ? <PlaceholderPage /> : (
<Layout title="Open Source Wishlist - Connect projects with sustainability support">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-50 to-gray-100 py-20" aria-labelledby="hero-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="max-w-4xl mx-auto">
        <h1 id="hero-heading" class="text-5xl font-bold text-gray-950 mb-4">
          Make open source sustainability a reality
        </h1>
        <p class="text-2xl font-medium text-gray-700 mb-8">
          See what your dependencies actually need. Sponsor the work. Track measurable impact.
        </p>
        
        <!-- Audience Selection -->
        <div class="grid md:grid-cols-3 gap-6 mb-8" role="list">
          <article class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col" role="listitem">
            <h2 class="text-xl font-semibold text-gray-950 mb-2">Open Source Maintainers</h2>
            <p class="text-gray-700 mb-4 flex-grow">Create a wishlist of services your project needs for long-term health and sustainability.</p>
            <a 
              href={`${basePath}maintainers`} 
              class="bg-gray-700 text-white px-6 py-3 rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-offset-2 transition-colors block text-center min-h-[44px] flex items-center justify-center font-medium"
              aria-label="Create your wishlist as a maintainer"
            >
              Create Your Wishlist
            </a>
          </article>
          
          <article class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col" role="listitem">
            <h2 class="text-xl font-semibold text-gray-950 mb-2">Wishlist Sponsors</h2>
            <p class="text-gray-700 mb-4 flex-grow">Fulfill specific, validated needs in projects you depend on. See exactly how your support creates impact.</p>
            <div class="space-y-3">
              <a 
                href={`${basePath}wishlists`} 
                class="bg-slate-700 text-white px-6 py-3 rounded-lg hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:ring-offset-2 transition-colors block text-center min-h-[44px] flex items-center justify-center font-medium"
                aria-label="Browse wishlists to fulfill"
              >
                Fulfill a Wish
              </a>
              <a 
                href="https://github.com/oss-wishlist/oss-wishlist-dependency-report" 
                target="_blank" 
                rel="noopener noreferrer" 
                class="flex items-center justify-center gap-2 text-gray-800 hover:text-gray-950 text-sm font-medium underline decoration-gray-300 hover:decoration-gray-500 focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-offset-2 rounded px-2 py-1"
                aria-label="View GitHub Action to see wishlists in your dependencies"
              >
                <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                See wishlists in your dependencies
              </a>
            </div>
          </article>
          
          <article class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col" role="listitem">
            <h2 class="text-xl font-semibold text-gray-950 mb-2">Open Source Practitioners</h2>
            <p class="text-gray-700 mb-4 flex-grow">Get paid to strengthen open source sustainability with work that values your expertise.</p>
            <a 
              href={`${basePath}/practitioners`} 
              class="bg-gray-700 text-white px-6 py-3 rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-offset-2 transition-colors block text-center min-h-[44px] flex items-center justify-center font-medium"
              aria-label="Apply to become a practitioner"
            >
              Become a Practitioner
            </a>
          </article>
        </div>
      </div>
    </div>
  </section>
</Layout>
)}
```