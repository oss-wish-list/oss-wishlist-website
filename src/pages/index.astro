---
import Layout from '../components/Layout.astro';
import PlaceholderPage from '../components/PlaceholderPage.astro';
import { getCollection } from 'astro:content';
import { getBasePath } from '../lib/paths';

// Check if site is in placeholder mode
const basePath = getBasePath();
const siteMode = import.meta.env.PUBLIC_SITE_MODE || 'full';
const isPlaceholder = siteMode === 'placeholder';

const services = await getCollection('services');
const featuredServices = services.filter(service => service.data.featured);
const maintainerServices = services.filter(service => 
  service.data.target_audience === 'maintainer' || service.data.target_audience === 'both'
);
const companyServices = services.filter(service => 
  service.data.target_audience === 'company' || service.data.target_audience === 'both'
);
---

{isPlaceholder ? <PlaceholderPage /> : (
<Layout title="OSS Wishlist - Get the help your project needs">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-100 to-gray-200 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-5xl font-bold text-gray-900 mb-4">
          Make open source sustainability a reality.
        </h1>
        <p class="text-3xl font-semibold text-emerald-600 mb-8 italic">
          Let someone help...
        </p>
        
        <!-- Audience Selection -->
        <div class="grid md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white p-6 rounded-lg shadow-sm border flex flex-col">
            <h3 class="text-xl font-semibold mb-2">Open Source Maintainers</h3>
            <p class="text-gray-600 mb-4 flex-grow">Identify from a list of sustainability services which are most critical for your project's health and where you need expert support.</p>
            <a href={`${basePath}/maintainers`} class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-colors block text-center min-h-[44px] flex items-center justify-center">
              Create or update your wishlist
            </a>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm border flex flex-col">
            <h3 class="text-xl font-semibold mb-2">Wishlist Sponsors</h3>
            <p class="text-gray-600 mb-4 flex-grow">Invest in the health and sustainability of open source projects that power your organization and our shared ecosystem, with measurable, verifiable impact.</p>
            <a href={`${basePath}/companies`} class="bg-slate-600 text-white px-6 py-3 rounded-lg hover:bg-slate-700 transition-colors block text-center min-h-[44px] flex items-center justify-center">
              Fulfill a wish
            </a>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm border flex flex-col">
            <h3 class="text-xl font-semibold mb-2">Open Source Practitioners</h3>
            <p class="text-gray-600 mb-4 flex-grow">Join a community dedicated to strengthening open source sustainability through meaningful, paid work that recognizes and values your expertise.</p>
            <a href={`${basePath}/practitioners`} class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-colors block text-center min-h-[44px] flex items-center justify-center">
              Join as a practitioner
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
    <!-- Call to Action -->
</Layout>
)}

</Layout>
)}