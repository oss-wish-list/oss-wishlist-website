---
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';

const allGuardians = await getCollection('guardians');
const featuredGuardians = allGuardians.filter(guardian => guardian.data.featured);
---

<Layout title="Ecosystem Guardians - Open Source Wishlist" description="Organizations and individuals protecting and supporting the open source ecosystem">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-100 to-gray-200 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-gray-900 mb-6">
          <span class="text-emerald-600">Ecosystem Guardians</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Meet the organizations and foundations protecting and nurturing the open source ecosystem. 
          From security audits to funding programs, these guardians help ensure OSS remains healthy and sustainable.
        </p>
        <div class="flex justify-center space-x-4">
          <a href="#featured-guardians" class="bg-gray-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-700 transition-colors">
            Meet the Guardians
          </a>
          <a href="/oss-wishlist-website/maintainers" class="bg-slate-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-slate-700 transition-colors">
            Become a Guardian
          </a>
        </div>
      </div>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 py-16">
    <!-- Featured Guardians -->
    {featuredGuardians.length > 0 && (
      <section id="featured-guardians" class="mb-16">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">‚ú® Featured Guardians</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Leading organizations making significant impact in open source sustainability and security.
          </p>
        </div>

        <div class="grid gap-8 md:grid-cols-2">
          {featuredGuardians.map((guardian) => (
            <div key={guardian.slug} class="bg-white rounded-lg shadow-sm border p-8 hover:shadow-md transition-shadow">
              <div class="flex items-start space-x-6 mb-6">
                {guardian.data.logo_url && (
                  <img 
                    src={guardian.data.logo_url} 
                    alt={guardian.data.name}
                    class="w-16 h-16 object-contain"
                  />
                )}
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">{guardian.data.name}</h3>
                  <div class="flex items-center space-x-2 text-sm text-gray-600 mb-2">
                    <span class="capitalize">{guardian.data.type}</span>
                    {guardian.data.location && (
                      <>
                        <span>‚Ä¢</span>
                        <span>üìç {guardian.data.location}</span>
                      </>
                    )}
                  </div>
                </div>
              </div>
              
              <p class="text-gray-700 mb-6 leading-relaxed">{guardian.data.description}</p>
              
              <div class="mb-6">
                <h4 class="font-semibold text-gray-900 mb-3">Focus Areas</h4>
                <div class="flex flex-wrap gap-2">
                  {guardian.data.focus_areas.slice(0, 4).map((area) => (
                    <span key={area} class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-sm">
                      {area}
                    </span>
                  ))}
                  {guardian.data.focus_areas.length > 4 && (
                    <span class="text-sm text-gray-500">+{guardian.data.focus_areas.length - 4} more</span>
                  )}
                </div>
              </div>

              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3 text-sm">
                  {guardian.data.funding_available && (
                    <span class="flex items-center text-green-600">
                      üí∞ Funding Available
                    </span>
                  )}
                  {guardian.data.provides_mentorship && (
                    <span class="flex items-center text-gray-600">
                      üë• Mentorship
                    </span>
                  )}
                </div>
                <a 
                  href={`/oss-wishlist-website/guardians/${guardian.slug}`}
                  class="text-gray-600 hover:text-gray-700 font-medium"
                >
                  Learn More ‚Üí
                </a>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- All Guardians -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">üåü All Guardians</h2>
