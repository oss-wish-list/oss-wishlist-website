---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';

const guardians = await getCollection('guardians');
const sortedGuardians = guardians.sort((a, b) => a.data.name.localeCompare(b.data.name));
---

<Layout title="Wishlist Sponsors - Open Source Wishlist" description="Organizations and individuals protecting and supporting the open source ecosystem">
  <!-- Hero Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-gray-900 mb-6">
          Open Source Wishlist <span class="text-gray-600">Sponsors</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Meet the organizations, foundations and individuals protecting and nurturing the open source ecosystem. 
          From security audits to funding programs, these sponsors help ensure OSS remains healthy and sustainable.
        </p>
      </div>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 py-16">
    <!-- All Sponsors -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">All Sponsors</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Discover all the organizations supporting the open source ecosystem.
        </p>
      </div>

      <!-- Sponsors Grid -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {sortedGuardians.map((guardian) => (
          <div key={guardian.slug} class="bg-white rounded-lg shadow-sm border p-6 hover:shadow-md transition-shadow">
            <div class="flex items-start space-x-4 mb-4">
              {guardian.data.logo_url && (
                <img 
                  src={guardian.data.logo_url} 
                  alt={guardian.data.name}
                  class="w-12 h-12 object-contain grayscale"
                />
              )}
              <div class="flex-1">
                <h3 class="font-semibold text-gray-800 text-lg mb-1">{guardian.data.name}</h3>
              </div>
            </div>
            <p class="text-sm text-gray-600 mb-4 line-clamp-2">{guardian.data.description}</p>
            <div class="mb-4">
              {guardian.data.social_media?.linkedin && (
                <a href={`https://linkedin.com/company/${guardian.data.social_media.linkedin}`} target="_blank" rel="noopener noreferrer" class="inline-block text-gray-500 hover:text-gray-700 text-xs px-2 py-1 rounded">
                  LinkedIn
                </a>
              )}
            </div>
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                <span class="inline-block bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                  Wishes fulfilled: {guardian.data.projects_supported ?? 0}
                </span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

</Layout>