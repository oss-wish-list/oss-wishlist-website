---

<Layout title="Browse Project Wishlists - OSS Wishlist" description="Discover open source projects seeking support. Find opportunities to sponsor, contribute, or provide services to maintainers.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-orange-50 to-red-100 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-5xl font-bold text-gray-900 mb-6">
          Discover Projects <span class="text-orange-600">Seeking Support</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          Browse wishlists from open source maintainers looking for funding, services, and strategic support. 
          Find projects that align with your interests or business needs.
        </p>
        
        <!-- Search Bar -->
        <div class="max-w-2xl mx-auto mb-8">
          <div class="relative">
            <input 
              type="text" 
              id="searchInput"
              placeholder="Search by project name..."
              class="w-full px-6 py-4 text-lg border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 pl-12"
            />
            <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-500 mt-2">Search across {wishlists.length} active project wishlists</p>
        </div>
        
        <div class="flex justify-center space-x-4">
          <a href="#filter" class="bg-orange-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-orange-700 transition-colors">
            Browse Wishlists
          </a>
          <a href={`${import.meta.env.BASE_URL}/submit`} class="border border-gray-300 text-gray-700 px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors">
            Create Your Wishlist
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-12 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-3xl font-bold text-orange-600">{wishlists.length}</div>
          <p class="text-gray-600">Active Wishlists</p>
        </div>
        <div>
          <div class="text-3xl font-bold text-green-600">$125K+</div>
          <p class="text-gray-600">Total Support Requested</p>
        </div>
        <div>
          <div class="text-3xl font-bold text-red-600">15+</div>
          <p class="text-gray-600">Technologies Represented</p>
        </div>
        <div>
          <div class="text-3xl font-bold text-orange-600">8.5M+</div>
          <p class="text-gray-600">Combined Monthly Downloads</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Filters Section -->
  <section id="filter" class="py-8 bg-gray-50 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-4 items-center justify-between">
        <div class="flex flex-wrap gap-2">
          <button class="px-4 py-2 bg-white border rounded-lg hover:bg-gray-50 transition-colors">All Projects</button>
          <button class="px-4 py-2 bg-white border rounded-lg hover:bg-gray-50 transition-colors">High Urgency</button>
          <button class="px-4 py-2 bg-white border rounded-lg hover:bg-gray-50 transition-colors">$10K+ Budget</button>
          <button class="px-4 py-2 bg-white border rounded-lg hover:bg-gray-50 transition-colors">Popular (1K+ stars)</button>
        </div>
        <div class="flex gap-2">
          <select class="px-3 py-2 bg-white border rounded-lg">
            <option>All Technologies</option>
            <option>JavaScript</option>
            <option>Python</option>
            <option>Rust</option>
            <option>DevOps</option>
          </select>
          <select class="px-3 py-2 bg-white border rounded-lg">
            <option>Sort by Recent</option>
            <option>Sort by Budget</option>
            <option>Sort by Popularity</option>
            <option>Sort by Urgency</option>
          </select>
        </div>
      </div>
    </div>
  </section>

  <!-- Wishlists Grid -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Search Results Info -->
      <div id="searchResults" class="mb-6 hidden">
        <p class="text-gray-600">
          <span id="resultCount">0</span> project(s) found for "<span id="searchTerm"></span>"
        </p>
      </div>
      
      <!-- No Results Message -->
      <div id="noResults" class="text-center py-12 hidden">
        <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 20a7.962 7.962 0 01-5-1.709M15 17a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No projects found</h3>
        <p class="text-gray-600">Try adjusting your search terms or browse all projects below.</p>
      </div>

      <div id="wishlistsGrid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {wishlists.map((wishlist) => (
          <div class="wishlist-card bg-white border rounded-lg shadow-sm hover:shadow-md transition-shadow p-6" data-project-name={wishlist.project_name.toLowerCase()}>
            <!-- Project Header -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center space-x-3">
                <div class="w-12 h-12 rounded bg-orange-500 flex items-center justify-center text-white font-bold">
                  ðŸ“¦
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900">{wishlist.project_name}</h3>
                  <p class="text-sm text-gray-600">@{wishlist.username}</p>
                </div>
              </div>
              <div class="flex space-x-2">
                <span class={`px-2 py-1 text-xs rounded-full ${urgencyColors[wishlist.urgency]}`}>
                  {wishlist.urgency} priority
                </span>
                <span class={`px-2 py-1 text-xs rounded-full ${stageColors[wishlist.project_stage]}`}>
                  {wishlist.project_stage}
                </span>
              </div>
            </div>

            <!-- Project Stats -->
            <div class="flex items-center space-x-4 mb-4 text-sm text-gray-600">
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
                {wishlist.github_stars}
              </span>
              <span class="flex items-center">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
                {wishlist.monthly_downloads}/mo
              </span>
            </div>

            <!-- Description -->
            <p class="text-gray-700 mb-4">{wishlist.description}</p>

            <!-- Services Needed -->
            <div class="mb-4">
              <h4 class="font-medium text-gray-900 mb-2">Looking for:</h4>
              <ul class="text-sm text-gray-700 space-y-1">
                {wishlist.services_needed.slice(0, 3).map((service) => (
                  <li class="flex items-center">
                    <span class="w-1.5 h-1.5 bg-indigo-400 rounded-full mr-2"></span>
                    {service}
                  </li>
                ))}
                {wishlist.services_needed.length > 3 && (
                  <li class="text-indigo-600 text-xs">+ {wishlist.services_needed.length - 3} more...</li>
                )}
              </ul>
            </div>

            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-4">
              {wishlist.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">{tag}</span>
              ))}
            </div>

            <!-- Budget and Actions -->
            <div class="flex items-center justify-between pt-4 border-t">
              <div>
                <span class="text-sm text-gray-600">Budget: </span>
                <span class="font-medium text-green-600">{wishlist.budget_range}</span>
              </div>
              <div class="flex space-x-2">
                                <a 
                  href={`${import.meta.env.BASE_URL}/wishlist/${wishlist.id}`}
                  class="bg-orange-600 text-white px-4 py-2 rounded text-sm hover:bg-orange-700 transition-colors"
                >
                  View Details
                </a>
                <a 
                  href={wishlist.repo_url}
                  target="_blank"
                  rel="noopener noreferrer" 
                  class="border border-gray-300 text-gray-700 px-4 py-2 rounded text-sm hover:bg-gray-50 transition-colors"
                >
                  GitHub
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-orange-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Have a Project That Needs Support?</h2>
      <p class="text-xl text-orange-100 mb-8">Create your wishlist and connect with supporters who want to help</p>
      <div class="flex justify-center space-x-4">
        <a href={`${import.meta.env.BASE_URL}/submit`} class="bg-white text-orange-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
          Create Your Wishlist
        </a>
        <a href={`${import.meta.env.BASE_URL}/maintainers`} class="border border-orange-300 text-white px-8 py-3 rounded-lg font-semibold hover:bg-orange-700 transition-colors">
          Learn More
        </a>
      </div>
    </div>
  </section>

<script>
  // Search functionality
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const searchResults = document.getElementById('searchResults');
    const searchTerm = document.getElementById('searchTerm');
    const resultCount = document.getElementById('resultCount');
    const noResults = document.getElementById('noResults');
    const wishlistCards = document.querySelectorAll('.wishlist-card');
    const wishlistsGrid = document.getElementById('wishlistsGrid');

    function performSearch() {
      const query = searchInput.value.toLowerCase().trim();
      
      if (query === '') {
        // Show all cards
        wishlistCards.forEach(card => {
          card.style.display = 'block';
        });
        searchResults.classList.add('hidden');
        noResults.classList.add('hidden');
        return;
      }

      let visibleCount = 0;
      
      wishlistCards.forEach(card => {
        const projectName = card.getAttribute('data-project-name');
        if (projectName.includes(query)) {
          card.style.display = 'block';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });

      // Update search results info
      searchTerm.textContent = searchInput.value;
      resultCount.textContent = visibleCount;
      
      if (visibleCount > 0) {
        searchResults.classList.remove('hidden');
        noResults.classList.add('hidden');
      } else {
        searchResults.classList.add('hidden');
        noResults.classList.remove('hidden');
      }
    }

    // Search on input
    searchInput.addEventListener('input', performSearch);
    
    // Search on enter
    searchInput.addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        performSearch();
      }
    });
  });
</script>

</Layout>