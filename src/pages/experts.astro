---
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';

const allExperts = await getCollection('experts');
const featuredExperts = allExperts.filter(expert => expert.data.featured);

// Get wishlist context from URL parameters
const url = new URL(Astro.request.url);
const wishlistSlug = url.searchParams.get('wishlist');
const projectName = url.searchParams.get('project');

let selectedWishlist = null;
if (wishlistSlug) {
  const wishlists = await getCollection('wishlists');
  selectedWishlist = wishlists.find(w => w.slug === wishlistSlug);
}
---

<Layout title="OSS Experts" description="Connect with verified open source experts who can help with your project needs">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      {selectedWishlist ? (
        <>
          <div class="mb-4">
            <a 
              href={`${import.meta.env.BASE_URL}/wishlists`}
              class="text-orange-600 hover:text-orange-700 font-medium text-sm"
            >
              ‚Üê Back to Wishlists
            </a>
          </div>
          <h1 class="text-4xl font-bold text-gray-900 mb-4">
            üéØ Experts for <span class="text-orange-600">{projectName || selectedWishlist.data.project_name}</span>
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Choose an expert to hire for the "{projectName || selectedWishlist.data.project_name}" project. 
            Connect directly via GitHub Sponsors or email to get started.
          </p>
        </>
      ) : (
        <>
          <h1 class="text-4xl font-bold text-gray-900 mb-4">üéØ OSS Experts</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Connect with verified experts who can help bring your open source project to the next level. 
            From security audits to community building, find the right expertise for your needs.
          </p>
          
          <!-- Apply to be an Expert CTA -->
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-6 max-w-4xl mx-auto mb-8 border border-blue-200">
            <div class="text-center">
              <h2 class="text-2xl font-bold text-gray-900 mb-2">Are You an OSS Expert?</h2>
              <p class="text-gray-700 mb-4">
                Join our community of verified experts and help open source projects thrive. Get connected with projects that need your expertise.
              </p>
              <a 
                href="/oss-wishlist-website/apply-expert" 
                class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors inline-flex items-center"
              >
                üöÄ Apply to Become an Expert
              </a>
            </div>
          </div>
        </>
      )}
    </div>

    <!-- Featured Experts -->
    {featuredExperts.length > 0 && (
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 mb-8">
          {selectedWishlist ? '‚≠ê Featured Experts - Ready to Hire' : '‚ú® Featured Experts'}
        </h2>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {featuredExperts.map((expert) => (
            <div key={expert.slug} class="bg-white rounded-lg shadow-sm border p-6 hover:shadow-md transition-shadow">
              <div class="flex items-start space-x-4 mb-4">
                {expert.data.avatar_url && (
                  <img 
                    src={expert.data.avatar_url} 
                    alt={expert.data.name}
                    class="w-16 h-16 rounded-full object-cover"
                  />
                )}
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-gray-900">{expert.data.name}</h3>
                  <p class="text-sm text-gray-600">{expert.data.title}</p>
                  {expert.data.company && (
                    <p class="text-sm text-blue-600">{expert.data.company}</p>
                  )}
                </div>
              </div>
              
              <p class="text-sm text-gray-700 mb-4 line-clamp-3">{expert.data.bio}</p>
              
              {selectedWishlist && (
                <div class="mb-4">
                  <a 
                    href={expert.data.github ? `https://github.com/sponsors/${expert.data.github}` : `mailto:${expert.data.email}?subject=${encodeURIComponent(`Hire ${expert.data.name} for ${projectName || selectedWishlist.data.project_name}`)}`}
                    target={expert.data.github ? "_blank" : "_self"}
                    rel={expert.data.github ? "noopener noreferrer" : ""}
                    class="w-full bg-green-600 text-white px-4 py-3 rounded-lg text-sm font-bold hover:bg-green-700 transition-colors flex items-center justify-center"
                  >
                    üíº Hire this expert for {projectName || selectedWishlist.data.project_name}
                    {expert.data.github && (
                      <span class="ml-2 text-xs opacity-75">(via GitHub Sponsors)</span>
                    )}
                  </a>
                </div>
              )}
              
              <div class="flex flex-wrap gap-2 mb-4">
                {expert.data.specialties.slice(0, 3).map((specialty) => (
                  <span key={specialty} class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">
                    {specialty}
                  </span>
                ))}
                {expert.data.specialties.length > 3 && (
                  <span class="text-xs text-gray-500">+{expert.data.specialties.length - 3} more</span>
                )}
              </div>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2 text-sm text-gray-600">
                  {expert.data.location && (
                    <span>üìç {expert.data.location}</span>
                  )}
                </div>
                <div class="flex space-x-2">
                  <a 
                    href={`/oss-wishlist-website/experts/${expert.slug}`}
                    class="text-blue-600 hover:text-blue-800 text-sm font-medium"
                  >
                    View Profile ‚Üí
                  </a>
                  {selectedWishlist && (
                    <a 
                      href={expert.data.github ? `https://github.com/sponsors/${expert.data.github}` : `mailto:${expert.data.email}?subject=${encodeURIComponent(`Hire ${expert.data.name} for ${projectName || selectedWishlist.data.project_name}`)}`}
                      target={expert.data.github ? "_blank" : "_self"}
                      rel={expert.data.github ? "noopener noreferrer" : ""}
                      class="bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-green-700 transition-colors"
                    >
                      üíº Hire for {(projectName || selectedWishlist.data.project_name).length > 15 ? 
                        (projectName || selectedWishlist.data.project_name).substring(0, 15) + '...' : 
                        (projectName || selectedWishlist.data.project_name)
                      }
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- All Experts by Category -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">
        {selectedWishlist ? 'üë• All Available Experts' : 'üë• All Experts'}
      </h2>
      
      <!-- Category Filter -->
      <div class="flex flex-wrap gap-2 mb-8">
        <button class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium">
          All
        </button>
        {Array.from(new Set(allExperts.flatMap(expert => expert.data.service_categories))).map((category) => (
          <button key={category} class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200">
            {category}
          </button>
        ))}
      </div>

      <!-- Experts Grid -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {allExperts.map((expert) => (
          <div key={expert.slug} class="bg-white rounded-lg shadow-sm border p-6">
            <div class="flex items-start space-x-4 mb-4">
              {expert.data.avatar_url && (
                <img 
                  src={expert.data.avatar_url} 
                  alt={expert.data.name}
                  class="w-12 h-12 rounded-full object-cover"
                />
              )}
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900">{expert.data.name}</h3>
                <p class="text-sm text-gray-600">{expert.data.title}</p>
                {expert.data.company && (
                  <p class="text-xs text-blue-600">{expert.data.company}</p>
                )}
              </div>
            </div>
            
            <p class="text-sm text-gray-700 mb-3 line-clamp-2">{expert.data.bio}</p>
            
            <div class="flex flex-wrap gap-1 mb-3">
              {expert.data.service_categories.slice(0, 2).map((category) => (
                <span key={category} class="inline-block bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                  {category}
                </span>
              ))}
            </div>
            
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                {expert.data.verified && (
                  <span class="text-green-600 text-xs">‚úÖ Verified</span>
                )}
                {expert.data.accepts_pro_bono && (
                  <span class="text-blue-600 text-xs">üíù Pro Bono</span>
                )}
              </div>
              <div class="flex space-x-2">
                <a 
                  href={`/oss-wishlist-website/experts/${expert.slug}`}
                  class="text-blue-600 hover:text-blue-800 text-sm font-medium"
                >
                  View ‚Üí
                </a>
                {selectedWishlist && (
                  <a 
                    href={expert.data.github ? `https://github.com/sponsors/${expert.data.github}` : `mailto:${expert.data.email}?subject=${encodeURIComponent(`Hire ${expert.data.name} for ${projectName || selectedWishlist.data.project_name}`)}`}
                    target={expert.data.github ? "_blank" : "_self"}
                    rel={expert.data.github ? "noopener noreferrer" : ""}
                    class="bg-green-600 text-white px-3 py-1 rounded text-xs font-medium hover:bg-green-700 transition-colors"
                    title={`Hire ${expert.data.name} for ${projectName || selectedWishlist.data.project_name}`}
                  >
                    üíº Hire
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA Section -->
    <div class="bg-blue-50 rounded-lg p-8 text-center">
      {selectedWishlist ? (
        <>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Ready to Hire an Expert?</h2>
          <p class="text-gray-600 mb-6">
            Connect "{projectName || selectedWishlist.data.project_name}" with the expertise they need to succeed.
          </p>
          <div class="flex justify-center space-x-4">
            <a 
              href={selectedWishlist.data.repo_url}
              target="_blank"
              rel="noopener noreferrer"
              class="border border-blue-300 text-blue-700 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors"
            >
              View Project
            </a>
            <a 
              href={`${import.meta.env.BASE_URL}/wishlists`}
              class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700"
            >
              Browse More Projects
            </a>
          </div>
        </>
      ) : (
        <>
          <h2 class="text-2xl font-bold text-gray-900 mb-4">Need Expert Help for Your Project?</h2>
          <p class="text-gray-600 mb-6">
            Browse project wishlists to see what expertise is in demand, or submit your own project needs.
          </p>
          <div class="flex justify-center space-x-4">
            <a 
              href={`${import.meta.env.BASE_URL}/wishlists`}
              class="bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700"
            >
              Browse Project Needs
            </a>
            <a 
              href="/oss-wishlist-website/submit" 
              class="border border-blue-300 text-blue-700 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors"
            >
              Submit Your Project
            </a>
          </div>
        </>
      )}
    </div>
  </div>
</Layout>