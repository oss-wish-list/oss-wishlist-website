---
import Layout from '../../components/Layout.astro';
import { getEntry } from 'astro:content';
import { getBasePath } from '../../lib/paths';

export const prerender = false;
const basePath = getBasePath();

// Server-rendered: resolve content dynamically at request time

// Get the guardian from props (static) or params (SSR fallback)
const { guardian: propsGuardian } = Astro.props;
const { slug } = Astro.params;

// Use props guardian if available, otherwise fetch dynamically
const guardian = propsGuardian || await getEntry('guardians', slug);

// If guardian doesn't exist, return 404
if (!guardian) {
  return Astro.redirect('/404');
}

const { Content } = await guardian.render();
---

<Layout title={`${guardian.data.name} - Ecosystem Sponsor`} description={guardian.data.description}>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Back Link -->
    <div class="mb-8">
      <a href={`${basePath}ecosystem-guardians`} class="text-gray-600 hover:text-orange-800 text-sm font-medium">
        â† Back to Wishlist Sponsors
      </a>
    </div>

    <!-- Guardian Header -->
    <div class="bg-white rounded-lg shadow-sm border p-8 mb-8">
      <div class="flex flex-col lg:flex-row lg:items-start space-y-6 lg:space-y-0 lg:space-x-8">
        {guardian.data.logo_url && (
          <div class="flex-shrink-0 mx-auto lg:mx-0">
            <img 
              src={guardian.data.logo_url} 
              alt={guardian.data.name}
              class="w-24 h-24 object-contain"
            />
          </div>
        )}
        
        <div class="flex-1 text-center lg:text-left">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">{guardian.data.name}</h1>
          <div class="flex flex-wrap justify-center lg:justify-start items-center gap-4 text-gray-600 mb-4">
            <span class="bg-gray-100 px-3 py-1 rounded-full text-sm font-medium capitalize">
              {guardian.data.type}
            </span>
            {guardian.data.location && (
              <span class="flex items-center text-sm">ğŸ“ {guardian.data.location}</span>
            )}
