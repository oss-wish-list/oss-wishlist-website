          <h2 class="text-xl font-bold text-gray-900 mb-4">ğŸ¯ Focus Areas</h2>
          <div class="grid gap-3 sm:grid-cols-2">
            {guardian.data.focus_areas.map((area: string) => (
              <div key={area} class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                <div class="w-2 h-2 bg-orange-500 rounded-full"></div>
                <span class="text-gray-800 font-medium">{area}</span>
