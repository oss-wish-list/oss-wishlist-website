        )}

        <!-- Supported Ecosystems -->
        {guardian.data.supported_ecosystems && guardian.data.supported_ecosystems.length > 0 && (
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">ğŸŒ Supported Ecosystems</h2>
            <div class="flex flex-wrap gap-2">
