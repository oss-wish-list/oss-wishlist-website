          </div>
        </div>

        <!-- Social Media -->
        {guardian.data.social_media && (
          <div class="bg-white rounded-lg shadow-sm border p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">ğŸ”— Social Media</h3>
            <div class="space-y-3">
              {guardian.data.social_media.twitter && (
                <a href={`https://twitter.com/${guardian.data.social_media.twitter}`} target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-700 hover:text-gray-600">
                  ğŸ¦ Twitter
