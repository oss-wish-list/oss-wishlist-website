---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
import Layout from '../components/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
const companyServices = services.filter(service => 
  service.data.target_audience === 'company' || service.data.target_audience === 'both'
);
---

<Layout title="Enterprise Open Source Services - OSS Wishlist" description="Practitioner services to help companies secure dependencies, train employees, and build sustainable open source strategies.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-orange-50 to-red-100 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-gray-900 mb-6">
          Open Source Services for <span class="text-gray-600">Wishlist Sponsors</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          Secure your supply chain, empower your developers, and build strategic relationships 
          with the open source maintainers your business depends on.
        </p>
        <div class="flex justify-center space-x-4">
          <a href={`${basePath}/maintainers`} class="bg-gray-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-700 transition-colors">
            Get Started
          </a>
          <a href="#services" class="border border-gray-300 text-gray-700 px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors">
            View Services
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Business Value Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Wishlist Sponsors Choose Our Services</h2>
        <p class="text-xl text-gray-600">Reduce risk, increase efficiency, and build sustainable tech strategies</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center p-6">
          <div class="bg-gray-200 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Risk Mitigation</h3>
          <p class="text-gray-600">Identify and address supply chain vulnerabilities before they impact your business</p>
        </div>
        
        <div class="text-center p-6">
          <div class="bg-orange-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Developer Productivity</h3>
          <p class="text-gray-600">Train your team to contribute effectively while following compliance requirements</p>
        </div>
        
        <div class="text-center p-6">
          <div class="bg-orange-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Strategic Investment</h3>
          <p class="text-gray-600">Build relationships with key maintainers and influence project roadmaps</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Common Use Cases</h2>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-3">üîç Dependency Due Diligence</h3>
          <p class="text-gray-600 mb-4">
            "We're acquiring a company and need to understand the security and sustainability 
            risks in their open source dependencies."
          </p>
          <span class="text-sm text-gray-600 font-medium">‚Üí Dependency Security Audit</span>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-3">üë• Employee Training</h3>
          <p class="text-gray-600 mb-4">
            "Our developers want to contribute to open source but we need to ensure 
            they follow company policies and don't leak proprietary code."
          </p>
          <span class="text-sm text-gray-600 font-medium">‚Üí Employee Open Source Training</span>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-3">‚ö†Ô∏è Critical Dependency Risk</h3>
          <p class="text-gray-600 mb-4">
            "One of our core dependencies is maintained by a single person who's 
            expressing burnout. How do we reduce this risk?"
          </p>
          <span class="text-sm text-gray-600 font-medium">‚Üí Dependency Analysis + Strategic Support</span>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-sm">
          <h3 class="text-xl font-semibold mb-3">üìã Compliance Requirements</h3>
          <p class="text-gray-600 mb-4">
            "We need to meet SOC2/ISO27001 requirements and auditors are asking 
            about our open source supply chain security."
          </p>
          <span class="text-sm text-gray-600 font-medium">‚Üí Security Audit + Compliance Documentation</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Enterprise Services</h2>
        <p class="text-xl text-gray-600">Comprehensive solutions for wishlist sponsors of all sizes</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {companyServices.map((service) => (
          <ServiceCard
            title={service.data.title}
            description={service.data.description}
            slug={service.slug}
            tags={service.data.tags}
            type="service"
          />
        ))}
      </div>
    </div>
  </section>

  <!-- ROI Section -->
  <section class="py-16 bg-orange-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Return on Investment</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="text-4xl font-bold text-gray-600 mb-2">85%</div>
          <p class="text-gray-700">Reduction in security incidents after dependency audits</p>
        </div>
        
        <div class="text-center">
          <div class="text-4xl font-bold text-gray-600 mb-2">3x</div>
          <p class="text-gray-700">Increase in quality contributions after employee training</p>
        </div>
        
        <div class="text-center">
          <div class="text-4xl font-bold text-slate-600 mb-2">50%</div>
          <p class="text-gray-700">Reduction in dependency-related incidents after proactive management</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Enterprise CTA -->
  <section class="py-16 bg-gray-600">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Ready to Secure Your Open Source Strategy?</h2>
      <p class="text-xl text-orange-100 mb-8">Join industry leaders who've transformed their approach to open source</p>
      <div class="flex justify-center space-x-4">
        <a href={`${basePath}/maintainers`} class="bg-white text-gray-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
          Schedule Consultation
        </a>
        <a href="mailto:enterprise@oss-wishlist.com" class="border border-gray-300 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-700 transition-colors">
          Contact Sales
        </a>
      </div>
    </div>
  </section>
</Layout>